{% extends 'base.html.twig' %}

{% block title %}Lista danych pogodowych{% endblock %}

{% block body %}
    <h1 class="mt-4">Lista danych pogodowych</h1>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Lokalizacja</th>
            <th>Data</th>
            <th>Temperatura (°C)</th>
            <th>Prędkość wiatru (km/h)</th>
            <th>Wilgotność (%)</th>
            <th>Ciśnienie (hPa)</th>
            <th>Akcje</th>
        </tr>
        </thead>
        <tbody>
        {% for weatherdatum in weatherdatas %}
            <tr>
                <td>{{ weatherdatum.location.city }}</td>
                <td>{{ weatherdatum.timestamp|date('Y-m-d') }}</td>
                <td>{{ weatherdatum.temperatureCelsius }}</td>
                <td>{{ weatherdatum.windSpeed }}</td>
                <td>{{ weatherdatum.humidity }}</td>
                <td>{{ weatherdatum.pressure }}</td>
                <td>
                    <a href="{{ path('app_weatherdata_show', {'id': weatherdatum.id}) }}" class="btn btn-info btn-sm">show</a>
                    {% if is_granted('ROLE_WEATHERDATA_EDIT') %}
                        <a href="{{ path('app_weatherdata_edit', {'id': weatherdatum.id}) }}" class="btn btn-primary btn-sm">edit</a>
                    {% endif %}
                    {% if is_granted('ROLE_WEATHERDATA_DELETE') %}
                        {{ include('weatherdata/_delete_form.html.twig') }}
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">No weather data</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if is_granted('ROLE_WEATHERDATA_NEW') %}
        <a href="{{ path('app_weatherdata_new') }}" class="btn btn-success">Create new</a>
    {% endif %}

{% endblock %}


